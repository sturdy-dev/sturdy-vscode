{
  "name": "sturdy",
  "displayName": "Sturdy - Code Collab",
  "description": "Notifies you of merge conflicts in real-time",
  "publisher": "sturdy",
  "author": {
    "name": "Kiril Videlov",
    "email": "kiril@getsturdy.com"
  },
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sturdy-dev/sturdy-vscode.git"
  },
  "engines": {
    "vscode": "^1.53.0"
  },
  "homepage": "https://getsturdy.com",
  "icon": "images/sturdy_logo_small.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "git",
    "github",
    "collaboration"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Sturdy",
        "properties": {
          "conf.sturdy.api": {
            "type": "string",
            "description": "Sturdy Backend API address",
            "default": "https://api.getsturdy.com",
            "scope": "application"
          },
          "conf.sturdy.token": {
            "type": "string",
            "description": "Sturdy token",
            "scope": "application"
          },
          "conf.sturdy.remote": {
            "type": "string",
            "description": "Sturdy Remote",
            "default": "https://git.getsturdy.com",
            "scope": "window"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "sturdy.auth",
        "title": "Sturdy Auth"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.53.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "simple-git": "^2.31.0"
  }
}
